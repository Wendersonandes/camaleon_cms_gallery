<div class="content-frame">
    <!-- END CONTENT FRAME TOP -->
    <%= form_for @gallery, as: "gallery", url: {action: @gallery.new_record? ? :create : :update}, html: {class: 'form-post row cama_ajax_request', id: 'form-post'} do |f| %>
        <!-- START CONTENT FRAME BODY -->
        <div class="content-frame-body col-md-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>
                        <span class="fa fa-file-o"></span>
                        <% if !@gallery.new_record? %>
                            <%= "#{t('camaleon_cms.admin.page_title.edit')} #{@post_type.the_title}: #{@post_decorate.the_title}" %> <%= raw @post_decorate.the_status.html_safe %>
                        <% end %>
                        <%= t('camaleon_cms.admin.page_title.create') + " " + @gallery.title.to_s if @gallery.new_record? %>
                    </h4>

                    <ul class="panel-controls">
                        <li><a class="panel-collapse" href="#"><span class="fa fa-angle-down"></span></a></li>
                    </ul>
                </div>
                <div class="panel-body">
                    <%= render partial: 'layouts/camaleon_cms/admin/form_error', locals: {data: @gallery} %>
                    <div class="hidden">
                    </div>
                    <div class="form-group">
                        <%= f.label t('camaleon_cms.admin.table.title') %> <em class="text-danger">*</em><br>
                        <%= f.text_field :title, :class => "form-control required translatable title-post" %>
                    </div>
                        <div class="form-group">
                            <%= f.label t('camaleon_cms.admin.sidebar.content') %> <em class="text-danger">*</em><br>
                            <%= f.text_area :description, :class => "form-control tinymce_textarea required translatable", :height => '520px', :style => "width: 100%" %>
                        </div>
                </div>
            </div>

        </div>
        </div>
         <div class="panel-footer">
        <a class="btn btn-default" href="<%= url_for action: :new %>" role="back"><%= t('camaleon_cms.admin.button.back')%></a>
        <button class="btn btn-primary pull-right" type="submit"><%= t('camaleon_cms.admin.button.submit')%></button>
      </div>

    <% end %>
</div>
